<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 class="genre-head">ジャンル一覧・追加</h3>

      <%= render 'genre_errors', genre: @genre %>

      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div>
        <%= f.label :ジャンル %>
        <%= f.text_field :name %>
        <%= f.submit "追加", class: "btn btn-primary genre_btn" %>
      </div>
      <% end %>

      <table class='table genre-table'>
        <thead>
          <tr>
            <th class="active col-xs-6">ジャンル</th>
            <th class="active col-xs-2">状態</th>
            <th class="active col-xs-3"></th>
          </tr>
        </thead>
        <tbody class="genre_area">
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>