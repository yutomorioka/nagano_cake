<div class="container">
      <div class="row">
        <h2>商品新規登録</h2>
        <%= render 'product_errors', product: @product %>
        <%= form_with model:@product,url:admin_products_path,local:true do |f| %>
        <div class="col-xs-3">
            <%= attachment_image_tag @product, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %>
            <%= f.attachment_field :image %>
        </div>

        <div class="col-xs-6">

          <div class="form-group">
            <%= f.label:商品名, class:"col-xs-2" %>
          <!--</div>-->
          <!--<div class="col-lg-4">-->
            <%= f.text_field :name, size:"56x5" %>
          </div>
        <!--</div>-->

          <div class="form-group">
            <div class="align-top">
              <%= f.label:商品説明, class:"col-xs-2"%>
            </div>
          <!--<div class="col-lg-4">-->
            <%= f.text_area :introduction, size:"55x5" %>
          </div>
        <!--</div>-->

        <!--<div>-->
          <div class="form-group">
            <%= f.label:ジャンル, class:"col-xs-2" %>
          <!--</div>-->
          <!--<div class="col-lg-9">-->
            <%= f.collection_select :genre_id, Genre.all, :id,:name,{prompt: "--選択してください--"} %>
          </div>
        <!--</div>-->

          <div class="form-group">
          <!--<div class="pull-left col-lg-3">-->
            <%= f.label:税抜価格, class:"col-xs-2" %>
          <!--</div>-->
          <!--<div class="col-lg-4">-->
            ¥ <%= f.text_field :price %>
          </div>
        <!--</div>-->

        <!--<div class="row">-->
          <div class="form-group">
            <%= f.label:販売ステータス, class:"col-xs-3" %>
          <!--</div>-->
          <!--<div class="col-lg-8">-->
            <%= f.select :is_active,[["販売中",true],["売り切れ",false]],include_blank: "選択して下さい" %>
          </div>



            <%= f.submit "新規登録", class: "btn btn-primary pull-right" %>
            <% end %>
        </div>
        <div class="col-xs-2"></div>
    </div>
</div>